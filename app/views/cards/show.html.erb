<div id="card">
	<h2><%= @card.title %></h2>
	<p><%= link_to "Edit Evidence Card", [:edit, @topic, @card] %> or
	<%= link_to "Delete Evidence Card", [@topic, @card], :method => :delete, :confirm => "Are you sure you want to delete this evidence card?" %></p>
	<%= simple_format(@card.description) %>

	<br>

	<% if @card.assets.exists? %>
		<h3>Attached Files</h3>
		<div class="assets">
			<% @card.assets.each do |asset| %>
				<p>
					<%= link_to File.basename(asset.asset_file_name), asset.asset.url %>
				</p>
				<p>
					<small><%= number_to_human_size(asset.asset.size) %></small>
					</p>
				<% end %>
		<% end %>

	<%= link_to "Back to all Evidence Cards", [@topic, @cards] %>
</div>

