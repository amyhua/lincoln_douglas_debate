<div class="container col-sm-12">

<div class="row">
	<div class="col-sm-12 col-md-12">
		<h2>CARD EXCHANGE</h2>

	</div>
</div>
<div class="row">
	<div class="col-sm-3 col-md-3">
		<a class="btn btn-large btn-primary create-tournament tournament-btn"<%= link_to "New Card", new_topic_path %></button>

	</div>
	<div class="col-sm-6 col-md-6">
		<h3>Recent Cards</h3>
		<ul>
			<% @topics.each do |topic| %>

			<div class="card">
				<div class="row">
			<% if current_user %>
				<div class="col-sm-3 col-md-3">
					<img width = "40px" src= "<%= current_user.image %>" >
					<p><i><small>Posted by <%= current_user.name %></i></small></p>
				</div>
			<% end %>
				<div class="col-sm-6 col-md-6">
				<%= topic.body %>
			</div>
<br><br>
			<div class="col-sm-12 col-md-12">
				<strong>Source:</strong> <%= topic.source %><br>
				Posted at <%= topic.updated_at.strftime("%m/%d/%Y %I:%M %P") %>
			</div><br>
			<div class="col-sm-12 col-md-12">

				<%= link_to "Edit Card", edit_topic_path(topic.id) %> or

				<%= link_to "Delete Card",
					topic,
					:method => :delete,
					:confirm => "Are you sure you want to delete this card?" %>

					<%= simple_form_for [topic] do |f| %>
					<%= f.input :starred %>
				<% if topic.starred == false %>
					<%= f.button :submit, "Star Card" %>
				<% else %>
					<%= f.button :submit, "Unstar Card" %>
					<% end %>
				<% end %>


			</div>




			</div>
		</div><br><br>

			<% end %>
		</ul>

	</div>

		<div class="col-sm-3 col-md-3">

				<h3>My Starred Cards</h3>

				<ul>
			<% @topics.each do |topic| %>

			<div class="card">
				<div class="row">
			<% if topic.starred == true %>
			<% if current_user %>
				<div class="col-sm-3 col-md-3">
					<img width = "40px" src= "<%= current_user.image %>" >
					<p><i><small>Posted by <%= current_user.name %></i></small></p>
				</div>
			<% end %>
				<div class="col-sm-6 col-md-6">
				<%= topic.body %>
			</div>
<br><br>
			<div class="col-sm-12 col-md-12">
				<strong>Source:</strong> <%= topic.source %><br>
				Posted at <%= topic.updated_at.strftime("%m/%d/%Y %I:%M %P") %>
			</div>
			<% end %><br>





			</div>
		</div><br><br>

			<% end %>
		</ul>

			</div>
</div>
</div>
