<h1>Edit tournament</h1>

<% if current_user %>
	<!-- TODO: Info on organizing a tournament -->
	<%= form_for [@tournament], :html => { :multipart => true }, :class => "form" do |f| %>

		<% if f.error_messages.match("error") %>
			<div class="alert alert-danger"><%= f.error_messages %></div>
		<% end %>
	
	
		<ul class="nav nav-tabs">
		  <li class="active"><a href="#summary" data-toggle="tab" id="summaryTab">Tournament Summary</a></li>
		  <li><a href="#details" data-toggle="tab" id="detailsTab">Tournament Details</a></li>
		  <li><a href="#rules" data-toggle="tab" id="rulesTab">Tournament Rules</a></li>
		  <li><a href="#confirmation" data-toggle="tab" id="confirmTab">Final Confirmation</a></li>
		</ul>
		
		<!-- TODO: Use EmberJS to provide a LivePreview of final details in a Preview tab (last tab) before submitting -->
		
		<div class="tab-content">  
	
		  <div class="tab-pane fade active in" id="summary">

		  
		<%= render 'form', :f => f  %>
	
		<% end %>

	<% else %>

	<h3>Sign in to create a tournament</h3>
	
<% end %>
